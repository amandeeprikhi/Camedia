@model IEnumerable<Camedia.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<button>@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })</button>

@if (!Model.Any())
{
    <text>We don't currently have any movies.</text>
}
else
{
<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
</table>
}

